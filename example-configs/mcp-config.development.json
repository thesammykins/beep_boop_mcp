{
  "mcpServers": {
    "beep-boop-coordination-dev": {
      "command": "tsx",
      "args": ["./src/index.ts"],
      "env": {
        "NODE_ENV": "development",
        "BEEP_BOOP_DEFAULT_MAX_AGE_HOURS": "1",
        "BEEP_BOOP_AUTO_CLEANUP_ENABLED": "true",
        "BEEP_BOOP_LOG_LEVEL": "debug",
        "BEEP_BOOP_FILE_PERMISSIONS": "0644",
        "BEEP_BOOP_BACKUP_ENABLED": "false",
        "BEEP_BOOP_BACKUP_DIR": "./dev-backups",
        "BEEP_BOOP_MAX_AGENT_ID_LENGTH": "50",
        "BEEP_BOOP_ALLOWED_DIRECTORIES": "./src,./test,./examples",
        "BEEP_BOOP_BLOCKED_DIRECTORIES": "/tmp,/var,/etc,node_modules",
        "BEEP_BOOP_ENABLE_METRICS": "true",
        "BEEP_BOOP_TIMEZONE": "UTC",
        "BEEP_BOOP_DEV_MODE": "true",
        "BEEP_BOOP_WATCH_MODE": "true",
        "BEEP_BOOP_MANAGE_GITIGNORE": "true",
        
        "_COMMENT_INGRESS": "=== INGRESS/LISTENER SYSTEM (Optional) ===",
        "BEEP_BOOP_INGRESS_ENABLED": "false",
        "BEEP_BOOP_INGRESS_PROVIDER": "discord",
        "BEEP_BOOP_INGRESS_HTTP_AUTH_TOKEN": "dev-auth-token-12345",
        "BEEP_BOOP_DISCORD_BOT_TOKEN": "YOUR_DISCORD_BOT_TOKEN_HERE",
        "BEEP_BOOP_SLACK_APP_TOKEN": "xapp-YOUR_SLACK_APP_TOKEN_HERE",
        "BEEP_BOOP_SLACK_BOT_TOKEN": "xoxb-YOUR_SLACK_BOT_TOKEN_HERE",
        
        "_COMMENT_CONVERSATION": "=== CONVERSATION FLOW (Optional) ===",
        "BEEP_BOOP_CONVERSATION_TIMEOUT_MINUTES": "3",
        "BEEP_BOOP_CONVERSATION_POLL_INTERVAL_MS": "1000",
        
        "_COMMENT_DISCORD_API": "=== DISCORD API RELIABILITY (Optional) ===",
        "BEEP_BOOP_DISCORD_API_RETRY_ATTEMPTS": "3",
        "BEEP_BOOP_DISCORD_API_RETRY_BASE_DELAY_MS": "1000",
        "BEEP_BOOP_DISCORD_API_TIMEOUT_MS": "15000",
        
        "_COMMENT_NOTIFICATIONS": "=== WEBHOOK NOTIFICATIONS (Optional) ===",
        "BEEP_BOOP_ENABLE_NOTIFICATIONS": "true",
        "BEEP_BOOP_NOTIFICATION_SERVICE": "both",
        "BEEP_BOOP_DISCORD_WEBHOOK_URL": "https://discord.com/api/webhooks/YOUR_WEBHOOK_URL",
        "BEEP_BOOP_SLACK_WEBHOOK_URL": "https://hooks.slack.com/services/YOUR_WEBHOOK_URL",
        "BEEP_BOOP_NOTIFICATION_RETRY_ATTEMPTS": "3",
        "BEEP_BOOP_NOTIFICATION_TIMEOUT_MS": "5000"
      }
    }
  }
}
