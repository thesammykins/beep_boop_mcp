{
  "mcpServers": {
    "beep-boop-coordination-enterprise": {
      "command": "node",
      "args": ["./dist/index.js"],
      "env": {
        "NODE_ENV": "production",
        "BEEP_BOOP_DEFAULT_MAX_AGE_HOURS": "8",
        "BEEP_BOOP_AUTO_CLEANUP_ENABLED": "false",
        "BEEP_BOOP_LOG_LEVEL": "info",
        "BEEP_BOOP_FILE_PERMISSIONS": "0644",
        "BEEP_BOOP_BACKUP_ENABLED": "true",
        "BEEP_BOOP_BACKUP_DIR": "./coordination-backups",
        "BEEP_BOOP_MAX_AGENT_ID_LENGTH": "150",
        "BEEP_BOOP_ALLOWED_DIRECTORIES": "./src,./packages,./services,./apps",
        "BEEP_BOOP_BLOCKED_DIRECTORIES": "/tmp,/var,/etc,node_modules,dist,.git",
        "BEEP_BOOP_ENABLE_METRICS": "true",
        "BEEP_BOOP_TIMEZONE": "America/New_York",
        "BEEP_BOOP_REQUIRE_TEAM_PREFIX": "true",
        "BEEP_BOOP_TEAM_PREFIXES": "frontend-,backend-,devops-,qa-",
        "BEEP_BOOP_AUDIT_LOG_ENABLED": "true",
        "BEEP_BOOP_AUDIT_LOG_PATH": "./logs/coordination-audit.log",
        "BEEP_BOOP_MAX_WORK_DURATION_HOURS": "24",
        "BEEP_BOOP_WARN_THRESHOLD_HOURS": "4",
        "BEEP_BOOP_ESCALATION_ENABLED": "true",
        "BEEP_BOOP_ESCALATION_AFTER_HOURS": "12",
        "BEEP_BOOP_MANAGE_GITIGNORE": "true",
        
        "_COMMENT_INGRESS": "=== INGRESS/LISTENER SYSTEM (Enterprise) ===",
        "BEEP_BOOP_INGRESS_ENABLED": "true",
        "BEEP_BOOP_INGRESS_PROVIDER": "slack",
        "BEEP_BOOP_INGRESS_HTTP_AUTH_TOKEN": "{{SECURE_INGRESS_TOKEN}}",
        "BEEP_BOOP_DISCORD_BOT_TOKEN": "{{DISCORD_BOT_TOKEN}}",
        "BEEP_BOOP_SLACK_APP_TOKEN": "{{SLACK_APP_TOKEN}}",
        "BEEP_BOOP_SLACK_BOT_TOKEN": "{{SLACK_BOT_TOKEN}}",
        
        "_COMMENT_NOTIFICATIONS": "=== WEBHOOK NOTIFICATIONS (Enterprise) ===",
        "BEEP_BOOP_ENABLE_NOTIFICATIONS": "true",
        "BEEP_BOOP_NOTIFICATION_SERVICE": "both",
        "BEEP_BOOP_DISCORD_WEBHOOK_URL": "{{DISCORD_WEBHOOK_URL}}",
        "BEEP_BOOP_SLACK_WEBHOOK_URL": "{{SLACK_WEBHOOK_URL}}",
        "BEEP_BOOP_NOTIFICATION_RETRY_ATTEMPTS": "5",
        "BEEP_BOOP_NOTIFICATION_TIMEOUT_MS": "10000",
        
        "_COMMENT_SECURITY": "=== SECURITY & COMPLIANCE (Enterprise) ===",
        "BEEP_BOOP_ENCRYPTION_ENABLED": "true",
        "BEEP_BOOP_ENCRYPTION_KEY": "{{ENCRYPTION_KEY}}",
        "BEEP_BOOP_RATE_LIMIT_ENABLED": "true",
        "BEEP_BOOP_RATE_LIMIT_MAX_REQUESTS": "100",
        "BEEP_BOOP_RATE_LIMIT_WINDOW_MS": "60000"
      }
    }
  }
}
