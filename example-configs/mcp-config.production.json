{
  "mcpServers": {
    "beep-boop-coordination-prod": {
      "command": "node",
      "args": ["./dist/index.js"],
      "env": {
        "NODE_ENV": "production",
        "BEEP_BOOP_DEFAULT_MAX_AGE_HOURS": "24",
        "BEEP_BOOP_AUTO_CLEANUP_ENABLED": "false",
        "BEEP_BOOP_LOG_LEVEL": "info",
        "BEEP_BOOP_FILE_PERMISSIONS": "0644",
        "BEEP_BOOP_BACKUP_ENABLED": "true",
        "BEEP_BOOP_BACKUP_DIR": "./coordination-backups",
        "BEEP_BOOP_MAX_AGENT_ID_LENGTH": "100",
        "BEEP_BOOP_ALLOWED_DIRECTORIES": "./src,./packages,./services",
        "BEEP_BOOP_BLOCKED_DIRECTORIES": "/tmp,/var,/etc,node_modules,dist,.git",
        "BEEP_BOOP_ENABLE_METRICS": "true",
        "BEEP_BOOP_TIMEZONE": "UTC",
        "BEEP_BOOP_MAX_CONCURRENT_OPERATIONS": "5",
        "BEEP_BOOP_MANAGE_GITIGNORE": "true",
        
        "_COMMENT_INGRESS": "=== INGRESS/LISTENER SYSTEM (Production) ===",
        "BEEP_BOOP_INGRESS_ENABLED": "true",
        "BEEP_BOOP_INGRESS_PROVIDER": "slack",
        "BEEP_BOOP_INGRESS_HTTP_AUTH_TOKEN": "{{PRODUCTION_INGRESS_TOKEN}}",
        "BEEP_BOOP_DISCORD_BOT_TOKEN": "{{DISCORD_BOT_TOKEN}}",
        "BEEP_BOOP_SLACK_APP_TOKEN": "{{SLACK_APP_TOKEN}}",
        "BEEP_BOOP_SLACK_BOT_TOKEN": "{{SLACK_BOT_TOKEN}}",
        
        "_COMMENT_CONVERSATION": "=== CONVERSATION FLOW (Production) ===",
        "BEEP_BOOP_CONVERSATION_TIMEOUT_MINUTES": "5",
        "BEEP_BOOP_CONVERSATION_POLL_INTERVAL_MS": "2000",
        
        "_COMMENT_DISCORD_API": "=== DISCORD API RELIABILITY (Production) ===",
        "BEEP_BOOP_DISCORD_API_RETRY_ATTEMPTS": "5",
        "BEEP_BOOP_DISCORD_API_RETRY_BASE_DELAY_MS": "2000",
        "BEEP_BOOP_DISCORD_API_TIMEOUT_MS": "30000",
        
        "_COMMENT_NOTIFICATIONS": "=== WEBHOOK NOTIFICATIONS (Production) ===",
        "BEEP_BOOP_ENABLE_NOTIFICATIONS": "true",
        "BEEP_BOOP_NOTIFICATION_SERVICE": "slack",
        "BEEP_BOOP_DISCORD_WEBHOOK_URL": "{{DISCORD_WEBHOOK_URL}}",
        "BEEP_BOOP_SLACK_WEBHOOK_URL": "{{SLACK_WEBHOOK_URL}}",
        "BEEP_BOOP_NOTIFICATION_RETRY_ATTEMPTS": "3",
        "BEEP_BOOP_NOTIFICATION_TIMEOUT_MS": "7000",
        
        "_COMMENT_PRODUCTION": "=== PRODUCTION STABILITY ===",
        "BEEP_BOOP_HEALTH_CHECK_ENABLED": "true",
        "BEEP_BOOP_HEALTH_CHECK_INTERVAL_MS": "30000",
        "BEEP_BOOP_ERROR_RECOVERY_ENABLED": "true",
        "BEEP_BOOP_GRACEFUL_SHUTDOWN_TIMEOUT_MS": "10000"
      }
    }
  }
}
